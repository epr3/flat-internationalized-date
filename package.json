{
  "name": "flat-internationalized-date",
  "version": "1.0.3",
  "description": "Internationalized calendar, date, and time manipulation utilities in a flat object format",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.umd.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "files": [
    "./dist",
    "./LICENSE",
    "./resolver.d.ts",
    "./namespaced.d.ts"
  ],
  "packageManager": "pnpm@8.15.4",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epr3/flat-internationalized-date.git"
  },
  "scripts": {
    "test": "vitest",
    "prepare": "pnpm simple-git-hooks",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "eslint . --fix --ignore-path .gitignore",
    "bumpp": "bumpp package.json",
    "pub:release": "pnpm publish --no-git-checks --access public",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "build": "pnpm type-check && pnpm build-only",
    "build-only": "vite build",
    "commit": "cz"
  },
  "author": {
    "name": "Eduard Predescu",
    "email": "eduard.florin.predescu@gmail.com",
    "url": "https://eduar.dev"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitest/ui": "^1.3.1",
    "bumpp": "^9.4.0",
    "commitizen": "^4.3.0",
    "dts-bundle": "^0.7.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.10.0",
    "vite": "^5.1.5",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "typescript": "^5.4.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
